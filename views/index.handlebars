<div class="container">
  <h1>Eat the Burger</h1>
  <img src="/assets/img/burger.png" class="burgerimage">
  <h3>Create your fantasy burger, and then devour it!</h3>

  <form action="/" method="POST" class="create-burger">
    <textarea type="text" name="burger_name">Create a burger...</textarea>
    <button type="submit">Submit</button>
  </form>

  <div class="category undevoured">
  {{#each burgers}}
    {{#unless this.devoured}}
      <div class="burger">
        <h3 class="burger-name">{{this.burger_name}}</h3>
        <form action="/{{this.id}}?_method=PUT" method="POST" class="devour-burger">
          <input type="hidden" name="id" value="{{this.id}}">
          <button type="submit">Devour this burger</button>
        </form>
        <div class="info info-id">id: {{this.id}}</div>
        <div class="info info-date">last modified: {{this.date}}</div>
      </div>
    {{/unless}}
  {{/each}}
  </div>

  <div class="category devoured">
  <h3>Someone already ate these:</h3>
  {{#each burgers}}
    {{#if this.devoured}}
      <div class="burger">
        <h3 class="burger-name">{{this.burger_name}}</h3>
        <div class="info info-id">id: {{this.id}}</div>
        <div class="info info-date">last modified: {{this.date}}</div>
      </div>
    {{/if}}
  {{/each}}
  </div>

</div>